---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---

<Card colSpan="lg:col-span-1 md:col-span-2" rowSpan="md:row-span-2 lg:row-span-4">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-white text-xl font-bold">
        Einfach mal 'ne Mail schreiben...
      </h1>
    </header>
    <div class="flex flex-col md:flex-row md:gap-8 lg:gap-0 lg:flex-col">
      <address class="flex flex-col mt-4">
        <h2 class="text-gray-500">Mail</h2>
        <p><a href="mailto:mail@fuzzyma.de">mail@fuzzyma.de</a></p>
      </address>
      <div class="flex flex-col mt-4 w-fit">
        <h2 class="text-gray-500">Soziales</h2>
        <ul class="md:flex md:gap-2 lg:block">
          <li>
            <a href={LINKS.linkedin} target="_blank">Linkedin</a>
          </li>
          <li>
            <a href={LINKS.github} target="_blank">Github</a>
          </li>
          <!-- <li>
            <a href={LINKS.twitter} target="_blank">X-Twitter</a>
          </li> -->
        </ul>
      </div>
    </div>
  </div>
</Card>
